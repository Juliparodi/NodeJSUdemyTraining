<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">

  <%- include('includes/flash') %>
  <%- include('includes/profile-shared') %>
  
    <div class="list-group">
      <% posts.forEach(function(post) { %>
        <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
          <img class="avatar-tiny" src="<%= profileAvatar %>8">
          <strong> <%= post.title %></strong> on <%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getDate() %>
        </a>
      <% }) %>
    </div>
  </div>

  <%- include('includes/footer') %>